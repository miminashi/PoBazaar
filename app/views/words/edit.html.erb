<h1>Editing word</h1>

<% form_for(@word) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :msgid %><br />
    <%= f.text_area :msgid %>
  </p>
  <p>
    <%= f.label :msgstr %><br />
    <%= f.text_area :msgstr %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @word %> |
<%= link_to 'Back', words_path %>